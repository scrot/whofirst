<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/add_people_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intro_add_people_text"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/marginTop"/>
    <View
        android:id="@+id/seperator_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_below="@id/add_people_text"
        android:background="@color/textColorLight"/>
    <ListView
        android:id="@+id/people_list"
        android:layout_width="match_parent"
        android:layout_below="@id/seperator_line"
        android:layout_height="300dp">
    </ListView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/intro_fab"
        app:fabSize="normal"
        android:src="@drawable/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/people_list"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_centerInParent="true"/>
</RelativeLayout>
